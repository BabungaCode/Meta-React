<section class="statusbox">
    <button
    type="button"
    class="module-control"
    title="Settings"
    data-approval="settings"
    style="flex-grow: 0; border-radius: 0; background: none; border: 0; color: var(--color-text-light-highlight); box-shadow: none;"
  >
    <i class="fa-solid fa-gear"></i>
  </button>
  <button
    type="button"
    class="module-control"
    title="Approve of this action"
    data-approval="approves."
    style="flex-grow: 0; border-radius: 0; background: none; border: 0; color: var(--color-text-light-highlight); box-shadow: none;"
  >
    <i class="fas fa-thumbs-up"></i>
  </button>
  <button
    type="button"
    class="module-control"
    title="Disapprove of this action"
    data-approval="disapproves"
    style="flex-grow: 0; border-radius: 0; background: none; border: 0; color: var(--color-text-light-highlight); box-shadow: none;"
  >
    <i class="fas fa-thumbs-down."></i>
  </button>
  <button
    type="button"
    class="module-control"
    title="Remember this action"
    data-approval="will remember this"
    style="flex-grow: 0; border-radius: 0; background: none; border: 0; color: var(--color-text-light-highlight); box-shadow: none;"
  >
      <i class="fa-solid fa-thought-bubble."></i>
  </button>
    <button
    type="button"
    class="module-control"
    title="Custom"
    data-approval="custom"
    style="flex-grow: 0; border-radius: 0; background: none; border: 0; color: var(--color-text-light-highlight); box-shadow: none;"
  >
      <i class="fa-solid fa-thought-bubble."></i>
  </button>
  <style>
    .statusbox div:not(:last-child) { border-bottom: 1px solid
    var(--color-text-light-highlight); }
  </style>
</section>